<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_240"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_guidance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/privacy_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_guidance_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:text="1、"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@+id/iv_guidance" />

        <TextView
            android:id="@+id/tv_guidance_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:text="2、"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_guidance_one" />

        <TextView
            android:id="@+id/tv_guidance_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:text="3、"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@+id/tv_guidance_two" />

        <Button
            android:id="@+id/btn_guidance_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/selector_guidance_btn_no"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_guidance_three" />

        <Button
            android:id="@+id/btn_guidance_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/selector_guidance_btn_ok"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_guidance_three" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_guidance_ok" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>